{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "target": "es2017",                          
    "module": "commonjs",                     
    "outDir": "lib",                        
    "rootDir": "src",                       
    "strict": true,                          
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true 
  },
  "include": [
    "src/**/*"
  ]
}
